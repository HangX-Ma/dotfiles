# Ref: <https://github.com/llvm/clangd-www/blob/main/faq.md>
CompileFlags:
  # Treat code as C++, use C++17 standard, enable more warnings.
  Add: [-xc++, -std=c++17, -Wall, -Wno-missing-prototypes]
  # Remove extra warnings specified in compile commands.
  # Single value is also acceptable, same as "Remove: [-mabi]"
  Remove:
Diagnostics:
  # Tweak Clang-Tidy checks.
  ClangTidy:
    Add: [
      readability-*,
      portability-*,
      modernize-*,
      google-*,
      bugprone-*
    ]
    Remove: [modernize-use-trailing-return-type]
    CheckOptions:
      WarnOnFloatingPointNarrowingConversion: false

      readability-identifier-naming.MacroDefinitionCase: UPPER_CASE

      readability-identifier-naming.EnumCase: CamelCase

      readability-identifier-naming.StructCase: CamelCase

      readability-identifier-naming.ClassCase: CamelCase
      readability-identifier-naming.ClassMethodCase: camelBack
      readability-identifier-naming.ClassMemberCase: lower_case
      readability-identifier-naming.ClassMemberSuffix: _

      readability-identifier-naming.MethodCase: camelBack
