
// Place your key bindings in this file to override the defaultsauto[]
[
    /* SIDE BAR COMMAND */
    { // toggle sidebar visibility 
    "key": "ctrl+n [",
    "command": "workbench.action.toggleSidebarVisibility"
    },
    { // toggle secondary sidebar visibility 
    "key": "ctrl+n ]",
    "command": "workbench.action.toggleAuxiliaryBar"
    },
    { // show explorer
    "key": "ctrl+n 1",
    "command": "workbench.files.action.focusFilesExplorer"
    },
    { // show global search
    "key": "ctrl+n 2",
    "command": "workbench.action.replaceInFiles"
    },
    { // show version control
    "key": "ctrl+n 3",
    "command": "workbench.view.scm",
    "when": "workbench.scm.active"
    },
    { // show debug
    "key": "ctrl+n 4",
    "command": "workbench.view.debug",
    "when": "viewContainer.workbench.view.debug.enabled"
    },
    { // show extensions store
    "key": "ctrl+n 5",
    "command": "workbench.view.extensions",
    "when": "viewContainer.workbench.view.extensions.enabled"
    },
    { // show todo tree
    "key": "ctrl+n 6",
    "command": "todo-tree-view.focus",
    },
    { // show bookmark
    "key": "ctrl+n 7",
    "command": "bookmarksExplorer.focus"
    },
    { // show test-explorer
    "key": "ctrl+n 8",
    "command": "test-explorer.focus"
    },


    /* EXPLORER MANAGEMENT */
    { // collapse the explorer folder 
    "key": "z",
    "command": "workbench.files.action.collapseExplorerFolders",
    "when": " explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus "
    },
    { // create a new file
    "key": "a",
    "command": "explorer.newFile",
    "when": " explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus "
    },
    { // create a new folder
    "key": "o",
    "command": "explorer.newFolder",
    "when": " explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus "
    },
    { // refresh the file explorer
    "key": "f",
    "command": "workbench.files.action.refreshFilesExplorer",
    "when": " explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus "
    },
    { // rename files or folders
    "key": "r",
    "command": "renameFile",
    "when": " explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus "
    },
    { // delete files or folders
    "key": "d",
    "command": "deleteFile",
    "when": " explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus "
    },
    { // cut files or folders
    "key": "x",
    "command": "filesExplorer.cut",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
    },
    { // copy files or folders
    "key": "y",
    "command": "filesExplorer.copy",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
    },
    { // paste files or folders
    "key": "p",
    "command": "filesExplorer.paste",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceReadonly && !inputFocus"
    },
    { // find in specific folder
    "key": "/",
    "command": "filesExplorer.findInFolder",
    "when": "explorerResourceIsFolder && filesExplorerFocus && foldersViewVisible && !inputFocus"
    },
    { // focus open editor view
    "key": "ctrl+k e",
    "command": "workbench.files.action.focusOpenEditorsView",
    "when": "workbench.explorer.openEditorsView.active"
    },
    { // focus timeline view
    "key": "ctrl+k t",
    "command": "timeline.focus",
    "when": "workbench.explorer.openEditorsView.active"
    },
    { // focus outline view
    "key": "ctrl+k o",
    "command": "outline.focus",
    "when": "workbench.explorer.openEditorsView.active"
    },


    /* CODING COMMAND */
    { // show help information
    "key": "ctrl+h h",
    "command": "editor.action.showHover",
    "when": "editorTextFocus"
    },
    { // show/hide parameters hints
    "key": "ctrl+h a",
    "command": "editor.action.triggerParameterHints",
    "when": "editorHasSignatureHelpProvider && editorTextFocus"
    },
    {
    "key": "ctrl+h a",
    "command": "closeParameterHints",
    "when": "editorFocus && parameterHintsVisible"
    },
    { // show/hide suggestions
    "key": "ctrl+h s",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly"
    },
    {
    "key": "ctrl+h s",
    "command": "hideSuggestWidget",
    "when": "suggestWidgetVisible && textInputFocus"
    },
    { // select next suggestion
    "key": "ctrl+n",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    { // select previous suggestion
    "key": "ctrl+p",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    { // quick fix problem
    "key": "ctrl+\\",
    "command": "editor.action.quickFix",
    "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly",
    },
    { // zoom in
    "key": "ctrl+=",
    "command": "editor.action.fontZoomIn"
    },
    { // zoom out
    "key": "ctrl+-",
    "command": "editor.action.fontZoomOut"
    },


    /* EDITOR COMMAND */
    { // close current editor
    "key": "ctrl+q",
    "command": "workbench.action.closeActiveEditor"
    },
    { // focus on the first editor group
    "key": "ctrl+w e",
    "command": "workbench.action.focusFirstEditorGroup"
    },
    { // switch to previous editor
    "key": "ctrl+,",
    "command": "workbench.action.previousEditor"
    },
    { // switch to next editor
    "key": "ctrl+/",
    "command": "workbench.action.nextEditor"
    },
    { // split editor down
    "key": "ctrl+w s",
    "command": "workbench.action.splitEditorDown"
    },
    { // split editor right
    "key": "ctrl+w v",
    "command": "workbench.action.splitEditor"
    },
    { // move cursor to windows above
    "key": "ctrl+w k",
    "command": "workbench.action.focusAboveGroup"
    },
    { // move cursor to windows below
    "key": "ctrl+w j",
    "command": "workbench.action.focusBelowGroup"
    },
    { // move cursor to windows left
    "key": "ctrl+w h",
    "command": "workbench.action.focusLeftGroup"
    },
    { // move cursor to windows right
    "key": "ctrl+w l",
    "command": "workbench.action.focusRightGroup"
    },


    /* FILE COMMAND */
    { // create a new file
    "key": "ctrl+f n",
    "command": "welcome.showNewFileEntries",
    },
    { // open a file
    "key": "ctrl+f o",
    "command": "workbench.action.files.openFile",
    "when": "true"
    },
    { // open a folder
    "key": "ctrl+f f",
    "command": "workbench.action.files.openFileFolder"
    },
    { // save as
    "key": "ctrl+f e",
    "command": "workbench.action.files.saveAs"
    },
    { // save files
    "key": "ctrl+f s",
    "command": "workbench.action.files.save"
    },
    { // save all
    "key": "ctrl+f w",
    "command": "workbench.action.files.saveAll"
    },
    { // close a file
    "key": "ctrl+f q",
    "command": "workbench.action.closeActiveEditor"
    },
    { // close all files
    "key": "ctrl+f a",
    "command": "workbench.action.closeAllEditors"
    },


    /* GLOBAL COMMAND */
    { // show command  palette
    "key": "ctrl+g c",
    "command": "workbench.action.showCommands"
    },
    { // open settings
    "key": "ctrl+g s",
    "command": "workbench.action.openSettings"
    },
    { // file quick open
    "key": "ctrl+g p",
    "command": "workbench.action.quickOpen"
    },
    { // open recent
    "key": "ctrl+g h",
    "command": "workbench.action.openRecent"
    },
    { // new vscode
    "key": "ctrl+g n",
    "command": "workbench.action.newWindow"
    },
    { // close vscode
    "key": "ctrl+g q",
    "command": "workbench.action.closeWindow"
    },


    /* PANEL COMMAND */
    { // toggle panel
    "key": "ctrl+l [",
    "command": "workbench.action.togglePanel"
    },
    { // toggle problem panel
    "key": "ctrl+l 1",
    "command": "workbench.panel.markers.view.focus"
    },
    { // toggle output panel
    "key": "ctrl+l 2",
    "command": "workbench.action.output.toggleOutput",
    "when": "workbench.panel.output.active"
    },
    { // toggle terminal panel
    "key": "ctrl+l 3",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
    },
    { // toggle debug control panel
    "key": "ctrl+l 4",
    "command": "workbench.debug.action.toggleRepl",
    "when": "workbench.panel.repl.view.active"
    },
    { // toggle gitlen panel
    "key": "ctrl+l 5",
    "command": "workbench.view.extension.gitlensPanel"
    },

    
    /* CANCEL SOME COMMAND */
    { // <C-a> select all will only take effects in Insert Mode 
    "key": "ctrl+a",
    "command": "editor.action.selectAll",
    "when": "vim.mode != 'Normal' && vim.mode != 'Visual' && vim.mode != 'VisualLine' && vim.mode != 'VisualBlock' && vim.mode != 'CommandlineInProgress'"
    },
    {
    "key": "ctrl+a",
    "command": "-editor.action.selectAll"
    },
    { // <C-c> copy will only take effects in Insert Mode
    "key": "ctrl+c",
    "command": "-editor.action.clipboardCopyAction"
    },
    {
    "key": "ctrl+c",
    "command": "-execCopy"
    },
    {
    "key": "ctrl+c",
    "command": "execCopy",
    "when": "vim.mode != 'Normal' && vim.mode != 'Visual' && vim.mode != 'VisualLine' && vim.mode != 'VisualBlock' && vim.mode != 'CommandlineInProgress'"
    },
    { // <C-v> paste will only take effects in Insert Mode
    "key": "ctrl+v",
    "command": "-editor.action.clipboardPasteAction"
    },
    {
    "key": "ctrl+v",
    "command": "-execPaste",
    },
    {
    "key": "ctrl+v",
    "command": "execPaste",
    "when": "vim.mode != 'Normal' && vim.mode != 'Visual' && vim.mode != 'VisualLine' && vim.mode != 'VisualBlock' && vim.mode != 'CommandlineInProgress'"
    },


    /* BOOKMARK COMMAND */
    { // toggle selection
    "key": "ctrl+m t",
    "command": "bookmarks.toggle",
    "when": "editorTextFocus"
    },
    { // jump to next bookmark
    "key": "ctrl+m n",
    "command": "bookmarks.jumpToNext",
    "when": "editorTextFocus"
    },
    { // jump to next bookmark
    "key": "ctrl+m p",
    "command": "bookmarks.jumpToPrevious",
    "when": "editorTextFocus"
    },
    { // list bookmarks in current file
    "key": "ctrl+m l",
    "command": "bookmarks.list"
    },
    { // list all bookmarks
    "key": "ctrl+m alt+l",
    "command": "bookmarks.listFromAllFiles"
    },
    { // clear bookmarks in current file
    "key": "ctrl+m c",
    "command": "bookmarks.clear"
    },
    { // clear all bookmarks
    "key": "ctrl+m alt+c",
    "command": "bookmarks.clearFromAllFiles"
    },


    /* MARKDOWN */
    {
    "key": "ctrl+k v",
    "command": "markdown.showPreviewToSide",
    "when": "!notebookEditorFocused && editorLangId == 'markdown'"
    },
    {
    "key": "ctrl+k v",
    "command": "markdown.extension.closePreview",
    "when": "markdownPreviewFocus"
    },
    {
    "key": "ctrl+k alt+v",
    "command": "markdown.showPreview",
    "when": "!notebookEditorFocused && editorLangId == 'markdown'"
    },
    {
    "key": "ctrl+k alt+v",
    "command": "markdown.extension.closePreview",
    "when": "markdownPreviewFocus"
    },
]